<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/lowlightedBg">
        <ImageView
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
        </ImageView>
        <ProgressBar
            android:layout_width="96dp"
            android:layout_centerInParent="true"
            android:layout_height="96dp"/>

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:rotation="180"
            android:src="@drawable/ic_baseline_chevron_right_24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/bg"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/cameraButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@mipmap/outline_photo_camera_white_48"
                android:layout_marginTop="72dp"
                android:layout_gravity="center|bottom"
                android:contentDescription="cameraImage">
            </ImageView>
            <TextView
                android:text="Camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/font"
                android:textSize="24sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/albumsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@mipmap/outline_collections_white_48"
                android:layout_marginTop="72dp"
                android:layout_gravity="center|bottom">
            </ImageView>
            <TextView
                android:text="Albums"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/font"
                android:textSize="24sp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/bg">
        <LinearLayout
            android:id="@+id/collageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@mipmap/baseline_auto_awesome_mosaic_white_48"
                android:layout_marginTop="72dp"
                android:layout_gravity="center|bottom">
            </ImageView>
            <TextView
                android:text="Collage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/font"
                android:textSize="24sp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/networkingButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@mipmap/outline_people_alt_white_48"
                android:layout_marginTop="72dp"
                android:layout_gravity="center|bottom">
            </ImageView>
            <TextView
                android:text="Networking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/font"
                android:textSize="24sp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>